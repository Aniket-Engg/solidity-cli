{
    "name": "solidity-cli",
    "version": "0.0.1",
    "description": "Comple solidity-code faster, easier and more reliable",
    "keywords": [
        "solidity",
        "ethereum",
        "eth",
        "web3",
        "dapp",
        "blockchain",
        "smart-contract"
    ],
    "bin": {
        "solidity": "./dist/src/cli.js"
    },
    "main": "./dist/src/index.js",
    "types": "./src/index.d.ts",
    "scripts": {
        "lint": "tslint --project .",
        "pretranspile": "rimraf -rf ./dist && mkdir ./dist",
        "transpile": "tsc -p ./ && echo '# transpile sucess!'",
        "pretest": "npm run transpile && rimraf -rf ./solc-installs && rimraf -rf ./compile-cache",
        "test": "mocha --bail --exit ./dist/test/index.test.js  ./dist/test/integration.test.js",
        "test:cli": "npm run transpile && bash ./test-cli.bash",
        "build": "npm run transpile",
        "dev": "watch 'npm run test:node' src/ test/",
        "tcompile": "npm run transpile && node ./tmp/src/compile.node.js cHJhZ21hIHNvbGlkaXR5IDAuNC4yNDsNCg0KDQpjb250cmFjdCBCYXNpYyB7DQogICAgYWRkcmVzcyBwdWJsaWMgb3duZXI7DQp9DQo="
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/pubkey/solcjs-cli.git"
    },
    "author": "pubkey",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/pubkey/solcjs-cli/issues"
    },
    "pre-commit": [
        "lint"
    ],
    "homepage": "https://github.com/pubkey/solcjs-cli#readme",
    "dependencies": {
        "child-process-promise": "2.2.1",
        "directory-exists": "2.0.0",
        "glob": "7.1.2",
        "js-sha3": "0.7.0",
        "solc": "0.4.24",
        "yargs": "^11.0.0"
    },
    "devDependencies": {
        "@types/node": "10.1.1",
        "@types/mocha": "5.2.0",
        "assert": "1.4.1",
        "async-test-util": "1.5.1",
        "command-line-args": "5.0.2",
        "concurrently": "3.5.1",
        "delete": "1.1.0",
        "exists-file": "3.0.2",
        "mocha": "5.1.1",
        "node": "10.0.0",
        "pre-commit": "1.2.2",
        "rimraf": "2.6.2",
        "shelljs": "0.8.2",
        "solhint": "1.1.10",
        "tslint": "5.10.0",
        "typescript": "2.8.3",
        "walk-sync": "0.3.2"
    }
}
